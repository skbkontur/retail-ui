{
  "name": "retail-ui",
  "version": "0.7.6",
  "description": "UI Components",
  "repository": {
    "type": "git",
    "url": "git@github.com:skbkontur/retail-ui.git"
  },
  "lint-staged": {
    "(components|lib)/**/*.js": [
      "prettier --single-quote --write",
      "eslint",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/skbkontur/retail-ui/issues"
  },
  "scripts": {
    "test": "jest --no-cache && gemini test --reporter vflat",
    "gemini:update": "gemini update",
    "storybook": "start-storybook -p 6060",
    "build-storybook": "build-storybook",
    "typecheck": "flow",
    "lint": "eslint . --ignore-pattern 'flow-typed/**/*.js'",
    "unit-test": "jest",
    "precommit": "flow && lint-staged",
    "prepush": "npm run unit-test"
  },
  "license": "MIT",
  "dependencies": {
    "add-event-listener": "0.0.1",
    "classnames": "^2.2.5",
    "exenv": "^1.2.2",
    "fbemitter": "^2.0.2",
    "fbjs": "^0.8.12",
    "invariant": "2.2.2",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "object-assign": "^4.1.1",
    "prop-types": "^15.5.10",
    "react-input-mask": "^0.8.0",
    "warning": "^3.0.0"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "@kadira/storybook-addon-knobs": "^1.7.1",
    "@kadira/storybook-addons": "1.6.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "6.4.1",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-jest": "^20.0.3",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.3",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^7.0.1",
    "file-loader": "^0.11.1",
    "flow-bin": "^0.47.0",
    "gemini": "^4.18.1",
    "gemini-sauce": "^1.0.1",
    "husky": "^0.13.3",
    "jest": "^20.0.4",
    "json-loader": "0.5.4",
    "less": "2.7.2",
    "less-loader": "^4.0.3",
    "lint-staged": "^3.5.0",
    "react": "0.14.9",
    "react-addons-css-transition-group": "0.14.8",
    "react-addons-test-utils": "0.14.8",
    "react-dom": "0.14.9",
    "style-loader": "^0.18.1",
    "url-loader": "^0.5.8"
  },
  "peerDependencies": {
    "react": "^0.14.9 || ^15.5.0",
    "react-addons-css-transition-group": "^0.14.9 || ^15.5.0",
    "react-dom": "^0.14.9 || ^15.5.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf||svg|ttf|woff|woff2)$": "<rootDir>/flow/StringStub.js"
    },
    "transform": {
      "\\.(less|js)": "<rootDir>/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*(test|spec))\\.(js|jsx)$",
    "roots": [
      "<rootDir>/components",
      "<rootDir>/lib",
      "<rootDir>/scripts",
      "<rootDir>/testing"
    ],
    "setupFiles": [
      "<rootDir>/node_modules/babel-polyfill/lib/index.js"
    ]
  }
}
