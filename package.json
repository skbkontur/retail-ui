{
  "name": "retail-ui",
  "version": "0.9.0",
  "description": "UI Components",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:skbkontur/retail-ui.git"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --write",
      "eslint",
      "git add"
    ],
    "*.{css,less}": [
      "prettier --write",
      "stylelint",
      "git add"
    ],
    "*.ts": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/skbkontur/retail-ui/issues"
  },
  "scripts": {
    "build": "node scripts/build",
    "build-storybook": "build-storybook",
    "gemini:update": "gemini update",
    "lint": "eslint . --ignore-pattern 'flow-typed/**/*.js'",
    "precommit": "flow && lint-staged",
    "prepush": "npm run unit-test",
    "storybook": "start-storybook -p 6060",
    "test": "jest --no-cache && gemini test --reporter vflat",
    "typecheck": "flow",
    "unit-test": "jest",
    "unit-test:watch": "jest --watch"
  },
  "license": "MIT",
  "dependencies": {
    "add-event-listener": "0.0.1",
    "classnames": "^2.2.5",
    "exenv": "^1.2.2",
    "fbemitter": "^2.0.2",
    "fbjs": "^0.8.14",
    "invariant": "2.2.2",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "object-assign": "^4.1.1",
    "prop-types": "^15.5.10",
    "react-input-mask": "^1.0.7",
    "warning": "^3.0.0"
  },
  "devDependencies": {
    "@storybook/addon-knobs": "^3.2.0",
    "@storybook/addons": "^3.2.0",
    "@storybook/react": "^3.2.3",
    "@types/react": "^16.0.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "7.1.1",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es3-member-expression-literals": "^6.22.0",
    "babel-plugin-transform-es3-property-literals": "^6.22.0",
    "babel-plugin-transform-flow-comments": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-jest": "^20.0.3",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.4",
    "enzyme": "^2.9.1",
    "eslint": "^4.3.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-sort-class-members": "^1.1.1",
    "file-loader": "^0.11.2",
    "flow-bin": "0.53",
    "fs-readdir-recursive": "^1.0.0",
    "gemini": "^4.19.3",
    "gemini-sauce": "^1.0.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "json-loader": "^0.5.7",
    "less": "2.7.2",
    "less-loader": "^4.0.5",
    "lint-staged": "^4.0.3",
    "mockdate": "^2.0.1",
    "output-file-sync": "^2.0.0",
    "prettier": "^1.5.3",
    "react": "^15.6.1",
    "react-addons-css-transition-group": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "url-loader": "^0.5.9"
  },
  "peerDependencies": {
    "@types/react": "^0.14.56 || ^15.0.25",
    "react": "^0.14.9 || ^15.5.0",
    "react-addons-css-transition-group": "^0.14.8 || ^15.5.0",
    "react-dom": "^0.14.9 || ^15.5.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf||svg|ttf|woff|woff2)$": "<rootDir>/flow/StringStub.js"
    },
    "transform": {
      "\\.(less|js)": "<rootDir>/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*(test|spec))\\.(js|jsx)$",
    "roots": [
      "<rootDir>/components",
      "<rootDir>/lib",
      "<rootDir>/scripts",
      "<rootDir>/testing"
    ],
    "setupFiles": [
      "<rootDir>/node_modules/babel-polyfill/lib/index.js"
    ]
  }
}
