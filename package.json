{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "husky": "^0.14.3",
    "lerna": "^2.11.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "precommit": "lerna run precommit",
    "prepush": "lerna run prepush"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ],
    "roots": [
      "<rootDir>/packages/*"
    ]
  }
}
