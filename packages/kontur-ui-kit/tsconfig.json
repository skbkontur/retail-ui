{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "lib",
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "importHelpers": true,
    "noUnusedLocals": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["src", "typings", "*.json"],
  "exclude": ["src/**/__stories__"]
}
